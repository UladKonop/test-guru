<!DOCTYPE html>
<html>
  <head>
    <title>TestGuru</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if logged_in? %>
      <p class='nav user'><%= link_to "Test-Guru", root_path %></p>
      <p class='nav user'>Welcome, <b> <%= current_user.email %></b> Guru </p>
      <p class='nav user'><%= link_to "Logout", logout_path, method: :post %></p>
    <% else %>
      <p class='nav user'><%= link_to "Test-Guru", root_path %></p>
      <p class='nav user'><%= link_to "Login", login_path %> | <%= link_to "Signup", signup_path %></p>
    <% end %>
    <%= flash_message %>
    <%= yield %>
    <%= render 'shared/footer' %>
  </body>
</html>
