<div class="card mx-auto" style="width: 18rem;">
  <%= image_tag @badge.picture, class: "card-img-top" %>
  <div class="card-body">
    <h5 class="card-title">
      <%= @badge.title %>
    </h5>
    <p class="card-text">
      <%= @badge.body %>
    </p>
  </div>
</div>

<div><%= link_to t('.back'), badges_path %></div>