<h1>Listing <%= @test.title %> Questions</h1>
<%= link_to 'New question', new_test_question_path(@test) %>
<table>
  <tr>   
    <th>Body</th>    
    <th>Actions</th>
    <th colspan="2"></th>
  </tr> 
<% @test.questions.each do |question| %>
  <tr>
    <td><%= question.body %></td>
    <td><%= link_to 'Show', question_path(id: question, test_id: @test) %>
    <%= link_to 'Edit', edit_question_path(id: question, test_id: @test) %>
    <%= button_to 'Delete', question_path(id: question, test_id: @test),  method: :delete %></td>
  </tr>
<% end %>
</table>
<br>
<%= link_to 'Back', admin_tests_path %>