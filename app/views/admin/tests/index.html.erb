<h1><%= t('.header') %></h1>
<%= link_to t('.new_test'), new_admin_test_path %>
<table class="table table-striped table-hover">
  <tr>   
    <th class='sort-by-title pointer'>
      <%= t('.title') %>
      <%= octicon 'arrow-up', class: 'text-success hide' %>
      <%= octicon 'arrow-down', class: 'text-success hide' %>
    </th>
    <th><%= t('.level') %></th>
    <th><%= t('.questions_amount') %></th>
    <th><%= t('.actions') %></th>
  </tr> 
<% @tests.each do |test| %>
  <tr>   
    <td><%= test.title %></td>
    <td><%= test.level %></td>
    <td><%= test.questions.count %></td>
    <td>
      <%= link_to t('.show'), admin_test_path(test) %>
      <%= link_to t('.edit'), edit_admin_test_path(test) %>
      <%= button_to t('.delete'), admin_test_path(test), method: :delete, data: { confirm: 'Are you sure?' } %>
    </td>
  </tr>
<% end %>
</table>

