<h1>Listing Tests</h1>
<%= link_to 'New test', new_admin_test_path %>
<table>
  <tr>   
    <th>Title</th>
    <th>Level</th>
    <th>Questions amount</th>
    <th>Actions</th>
    <th colspan="4"></th>
  </tr> 
<% @tests.each do |test| %>
  <tr>   
    <td><%= test.title %></td>
    <td><%= test.level %></td>
    <td><%= test.questions.count %></td>
    <td><%= link_to 'Show', admin_test_path(test) %>
    <%= link_to 'Edit', edit_admin_test_path(test) %>
    <%= button_to 'Delete', admin_test_path(test), method: :delete, data: { confirm: 'Are you sure?' } %>
  </td>

  </tr>
<% end %>
</table>

